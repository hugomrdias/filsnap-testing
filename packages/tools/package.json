{
  "name": "filsnap-testing-tools",
  "version": "0.0.1",
  "description": "Example package description.",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "repository": {
    "url": "hugomrdias/filsnap-testing",
    "directory": "packages/tools"
  },
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.js"
    },
    "./fixture": {
      "types": "./dist/src/fixture.d.ts",
      "import": "./src/fixture.js"
    },
    "./metamask": {
      "types": "./dist/src/metamask.d.ts",
      "import": "./src/metamask.js"
    }
  },
  "typesVersions": {
    "*": {
      "fixture": [
        "dist/src/fixture"
      ],
      "metamask": [
        "dist/src/metamask"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/*.d.ts",
    "dist/src/*.d.ts.map"
  ],
  "scripts": {
    "lint": "tsc --build && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "tsc --build",
    "test": "pnpm run test:node && pnpm run test:browser && pnpm run test:e2e",
    "test:e2e": "playwright test",
    "test:node": "mocha 'test/**/!(*.browser).test.js'",
    "test:browser": "playwright-test 'test/**/!(*.node).test.js'"
  },
  "dependencies": {
    "@metamask/providers": "^10.2.1",
    "@metamask/snaps-utils": "^0.31.0",
    "@noble/curves": "^0.8.3",
    "@noble/hashes": "^1.3.0",
    "@playwright/test": "^1.31.2",
    "@scure/bip32": "^1.2.0",
    "@scure/bip39": "^1.2.0",
    "@zondax/izari-filecoin": "^0.5.1",
    "bignumber.js": "^9.1.1",
    "bn.js": "^5.2.1",
    "conf": "^11.0.1",
    "emittery": "^1.0.1",
    "eth-rpc-errors": "^4.0.3",
    "fflate": "^0.7.4",
    "p-retry": "^5.1.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "assert": "^2.0.0",
    "mocha": "^10.2.0",
    "playwright-test": "^8.2.0",
    "type-fest": "^3.6.1"
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "type-fest"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
