{
  "name": "metamask-testing-tools",
  "version": "0.1.1",
  "description": "This is a collection of tools for testing metamask, metamask flask and metamask snaps.",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "repository": {
    "url": "hugomrdias/filsnap-testing",
    "directory": "packages/tools"
  },
  "keywords": [
    "metamask",
    "testing",
    "snap",
    "flask",
    "playwright"
  ],
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.js"
    },
    "./fixture": {
      "types": "./dist/src/fixture.d.ts",
      "import": "./src/fixture.js"
    },
    "./metamask": {
      "types": "./dist/src/metamask.d.ts",
      "import": "./src/metamask.js"
    }
  },
  "typesVersions": {
    "*": {
      "fixture": [
        "dist/src/fixture"
      ],
      "metamask": [
        "dist/src/metamask"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/*.d.ts",
    "dist/src/*.d.ts.map"
  ],
  "scripts": {
    "lint": "tsc --build && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "tsc --build",
    "test": "pnpm run test:e2e",
    "test:e2e": "METAMASK_TAG=v10.27.0 playwright test"
  },
  "dependencies": {
    "@metamask/providers": "^10.2.1",
    "@metamask/snaps-utils": "^0.31.0",
    "@playwright/test": "^1.32.1",
    "conf": "^11.0.1",
    "emittery": "^1.0.1",
    "eth-rpc-errors": "^4.0.3",
    "fflate": "^0.7.4",
    "p-retry": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "type-fest": "^3.7.2"
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "type-fest"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
