{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    // project options
    "allowJs": true,
    "checkJs": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    // linter checks
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "importsNotUsedAsValues": "remove",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "entryPointStrategy": "packages",
    "entryPoints": ["packages/tools"],
    "darkHighlightTheme": "github-dark",
    "navigationLinks": {
      "Github": "https://github.com/hugomrdias/filsnap-testing"
    }
  }
}
